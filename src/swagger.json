                    "content": {
                        "application/json": {
                            "schema" : {
                                "type": "object",
                                "properties": {
                                    "name": {
                                        "type": "string"
                                    },
                                    "description": {
                                        "type": "string"
                                    }
                                },
                                "example" : {
                                    "name": "category name sample",
                                    "description": "category description sample"
                                }
                            }
                        }
                    }
                },
                "responses": {
                    "201": {
                        "description": "Created"
                    },
                    "500": {
                        "description": "Category AlReadyExists"
                    }
                }
            },
            "get": {
                "tags": ["Category"],
                "summary": "List all Categories",
                "description": "List all Categories",
